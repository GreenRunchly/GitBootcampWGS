<div class="loadingScreen">
    <style>
        .loadingScreen{
            top: 0;
            left: 0;
            position: fixed;
            width: 100vw;
            height: 100vh;
            background-color: rgba(255, 255, 255, 1);
            z-index: 999999;
            opacity: 1;
            transition: 1s;
        }
        .loadingScreen.done{
            background-color: rgba(255, 255, 255, 0);
        }
        .loadingScreen > .bar{
            position: relative;
            width: 100vw;
            height: 0.4rem;
            background-color: blueviolet;
            animation: loadingBar 2s infinite cubic-bezier(.34,.84,.67,.38);
            opacity: 1;
            transition: 1s;
        }
        .loadingScreen.done .bar{
            opacity: 0;
        }
        @keyframes loadingBar {
            0%{
                left: 10vw;
                width: 50vw;
            }
            25%{
                left: 25vw;
                width: 25vw;
            }
            50%{
                left: 50vw;
                width: 25vw;
            }
            75%{
                left: 25vw;
                width: 100vw;
            }
            100%{
                left: 0vw;
                width: 100vw;
            }
        }
    </style>
    <div class="bar"></div>
</div>